<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_333333"
    tools:context="base.splithighlightseekbar.MainActivity">

    <base.splithighlightseekbar.OnlyHeSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        app:seekbarGrayBg="@drawable/only_he_progress_item_gray"
        app:seekbarGreenBg="@drawable/only_he_progress_item_green"
        android:progressDrawable="@drawable/player_seekbar_bg"
        app:seekbarNormal="@drawable/player_seekbar_bg"
        android:thumb="@mipmap/ic_seek_dot"
        android:thumbOffset="-1dp"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:text="@string/change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />
</android.support.constraint.ConstraintLayout>
